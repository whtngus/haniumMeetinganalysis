<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"

       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_subject"
            />
       <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
           android:id="@+id/save_conference"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true">

           <Button
               android:id="@+id/camera_upload"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:onClick="onClick"
               android:text="사진" />

           <Button
               android:id="@+id/file_upload"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/camera_upload"
               android:onClick="onClick"
               android:text="파일" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"
               android:layout_marginTop="155dp"
               android:id="@+id/search_tag"
               android:hint="검색태그"
               android:onClick="onClick"
               />


           <EditText
               android:id="@+id/note"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/file_upload"
               android:hint="참고사항" />

           <Button
               android:id="@+id/btn_save"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:text="저장" />

       </RelativeLayout>
   </LinearLayout>
</ScrollView>